{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@literal-ui/core": ["./packages/core/src/index.ts"],
      "@literal-ui/hooks": ["./packages/hooks/src/index.ts"],
      "@literal-ui/plugins": ["./packages/plugins/src/index.ts"]
    }
  },
  "exclude": ["node_modules"]
}
